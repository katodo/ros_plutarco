<?xml version="1.0"?>

<robot name="plutarco">

	<!-- Base link position - central position of body top surface, electronic device level -->
	<link name="base_link">
		<visual>
			<origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
			<geometry>
				<cylinder length="0.001" radius="0.03" />
			</geometry>
			<material name="blue">
				<color rgba="0 0 1 0.5"/>
			</material>
		</visual>
	</link>

	<link name="body_main">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://plutarco_description/urdf/models/Body.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="light_grey">
                <color rgba="0.8 0.8 0.8 0.8"/>
            </material>
        </visual>
    </link>

	<joint name="body_main_joint" type="fixed">
		<parent link="base_link"/>
		<child link="body_main"/>
		<origin rpy="1.5708 0.0 0.0" xyz="0.0 0.00 -0.14"/>
	</joint>


	<!-- Left wheel link -->
	<link name="left_wheel">
		<visual>
			<geometry>
				<cylinder length="0.06" radius="0.1"/>
			</geometry>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>
		</visual>
		<collision>
		  <geometry>
		<cylinder length="0.06" radius="0.1"/>
		  </geometry>
		</collision>
	</link>

	<!-- Joint configuration left joint -->
	<joint name="left_joint" type="continuous">
		<axis xyz="0 0 -1"/>
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<origin rpy="1.57075 0.0 0.0" xyz="0 0.28 -0.17"/>
		<limit effort="2" velocity="10"/>
		<joint_properties damping="0.02" friction="0.04"/>
	</joint>

	<!-- Transmission configuration left joint -->
	<transmission name="$left_trans" type="SimpleTransmission">
		<type>transmission_interface/SimpleTransmission</type>
		<actuator name="$left_motor">
			<mechanicalReduction>1</mechanicalReduction>
		</actuator>
		<joint name="left_joint">
			<hardwareInterface>VelocityJointInterface</hardwareInterface>
		</joint>
	</transmission>

	<!-- Right wheel link -->
	<link name="right_wheel">
		<visual>
			<geometry>
				<cylinder length="0.06" radius="0.1"/>
			</geometry>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>
		</visual>
		<collision>
		  <geometry>
		<cylinder length="0.06" radius="0.1"/>
		  </geometry>
		</collision>
	</link>

	<!-- Joint configuration left joint -->
	<joint name="right_joint" type="continuous">
		<axis xyz="0 0 -1"/>
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<origin rpy="1.57075 0.0 0.0" xyz="0 -0.28 -0.17"/>
		<limit effort="2" velocity="10"/>
		<joint_properties damping="0.02" friction="0.04"/>
	</joint>

	<!-- Transmission configuration right joint -->
	<transmission name="$right_trans" type="SimpleTransmission">
		<type>transmission_interface/SimpleTransmission</type>
		<actuator name="$right_motor">
			<mechanicalReduction>1</mechanicalReduction>
		</actuator>
		<joint name="right_joint">
			<hardwareInterface>VelocityJointInterface</hardwareInterface>
		</joint>
	</transmission>

<!-- imu tf -->
	<link name="imu_link">
		<visual>
			<geometry>
				<box size="0.02 0.03 0.005" />
			</geometry>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<box size="0.02 0.03 0.005" />
			</geometry>
		</collision>
	</link>

	<joint name="imu_joint" type="fixed">
		<parent link="base_link"/>
		<child link="imu_link"/>
		<origin rpy="0.0 0.0 0.0" xyz="-0.025 0.05 0.11"/>
	</joint>
<!-- -->

<!-- YD lidar -->
	<link name="ydlidar_link">
	<visual>
		<geometry>
			<cylinder length="0.06" radius="0.035" />
		</geometry>
		<origin xyz="0 0 0.03" />
		<material name="kkk">
			<color rgba="0 0 0 1" />
		</material>
	</visual>
	</link>
	<joint name="base_link_to_base_laser_yd" type="fixed">
		<parent link="base_link"/>
		<child link="ydlidar_link"/>
		<origin xyz="-0.07 0.12 0.38" rpy="0 0 -1.5708" />
	</joint>	


<!--RP lidar -->
	<link name="rplidar_link">
	<visual>
		<geometry>
			<cylinder length="0.06" radius="0.035" />
		</geometry>
		<origin xyz="0 0 0.03" />
		<material name="kkk">
			<color rgba="0 0 0 1" />
		</material>
	</visual>
	</link>
	<joint name="base_link_to_base_laser_rp" type="fixed">
		<parent link="base_link"/>
		<child link="rplidar_link"/>
		<!-- <origin xyz="-0.07 0 0.35" rpy="0 0 -1.5708" /> --> <!-- Ruota di -90Â°, -1,5708 rad -->
		<origin xyz="-0.07 0 0.35" rpy="0 0 0" />
	</joint>	
</robot>
